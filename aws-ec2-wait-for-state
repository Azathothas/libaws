#!/usr/bin/env python3.6
import time
import random
import argh
import sys
import aws_util

def main(*selectors, end_state, start_state=None):
    assert end_state in ['running', 'stopped']
    instances = aws_util.ls(selectors, start_state)
    ids = [i.instance_id for i in instances]
    if not instances:
        sys.exit(1)
    else:
        for i in range(300):
            try:
                new_instances = aws_util.ls(ids, state=end_state)
                assert len(ids) == len(new_instances), f'{len(ids)} != {new_instances}'
                for i in new_instances:
                    print(i.instance_id)
                return
            except:
                time.sleep(10 + 5 * random.random())
        assert False, f'failed to wait for {end_state} for instances {ids}'

if __name__ == '__main__':
    with aws_util.setup():
        argh.dispatch_command(main)
